<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardElevation="4dp"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="419dp"
        android:layout_height="340dp"
        android:background="@drawable/ic_wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="205dp"
        android:layout_height="99dp"
        android:text="Forgot Password?"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="44dp" />

    <EditText
        android:id="@+id/forphnum"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/ic_local_phone"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Phone Number"

        android:inputType="phone"
        android:padding="16dp"
        android:text="7892831322"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.399" />

    <EditText
        android:id="@+id/Secure"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/ic_security_black_24dp"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="SecureCode"
        android:inputType="text"
        android:padding="16dp"
        android:text="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forphnum" />

    <Button
        android:id="@+id/getpass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_bg"
        android:text="Get Password"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Secure"
        app:layout_constraintVertical_bias="0.013" />


</androidx.constraintlayout.widget.ConstraintLayout>